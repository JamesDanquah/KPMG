@model TestProject.Models.Transaction.TransactionViewModel

@{
    ViewBag.Title = "Index";
}

<h2>File Upload</h2>

@using (Html.BeginForm("UploadFile", "Transaction", FormMethod.Post,
                                            new { enctype = "multipart/form-data" }))
{
    
    <div class="row">
        <div class="col-xs-12">
            <fieldset>
                <legend>Upload file</legend>
                <div class="editor-field">
                    @Html.TextBox("file", "", new { type = "file" })
                </div>
                <br />
                <div class="editor-field">
                    <a href="/" class="btn btn-default">Back</a>
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </fieldset>
        </div>
    </div>
}

